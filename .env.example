# ===========================================
# NEWS PORTAL - ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env.local and fill in your values

# ===========================================
# Brand Configuration
# ===========================================
BRAND_ID=brand1
BRAND_NAME="News Portal 1"
BRAND_DOMAIN=localhost:3000
BRAND_LOGO_URL=/images/logo.svg
BRAND_PRIMARY_COLOR=#1a73e8
BRAND_SECONDARY_COLOR=#4285f4

# ===========================================
# MongoDB Configuration
# ===========================================
# Each brand should have its own MongoDB database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/newsportal_brand1?retryWrites=true&w=majority

# ===========================================
# Authentication
# ===========================================
BETTER_AUTH_SECRET=your-secret-key-min-32-chars-long
BETTER_AUTH_URL=http://localhost:3000

# ===========================================
# DIMOCO Payment Configuration
# ===========================================
DIMOCO_API_URL=https://api.dimoco.eu
DIMOCO_API_KEY=your-dimoco-api-key
DIMOCO_MERCHANT_ID=your-merchant-id
DIMOCO_SERVICE_ID=your-service-id
DIMOCO_CALLBACK_SECRET=your-callback-secret
DIMOCO_SUCCESS_URL=http://localhost:3000/payment/success
DIMOCO_CANCEL_URL=http://localhost:3000/payment/cancel

# Price per article in cents (99 = 0.99 EUR)
ARTICLE_PRICE_CENTS=99

# ===========================================
# OpenAI Configuration (for AI Agents)
# ===========================================
OPENAI_API_KEY=sk-your-openai-api-key

# ===========================================
# BrightData Configuration (for Web Scraping)
# ===========================================
BRIGHTDATA_API_TOKEN=your-brightdata-token
BRIGHTDATA_ZONE=web_unlocker1

# ===========================================
# Admin Configuration
# ===========================================
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-this-password

# ===========================================
# Agent Configuration
# ===========================================
# Cron schedule for content agents (default: every 6 hours)
AGENT_CRON_SCHEDULE=0 */6 * * *
# Maximum articles to generate per run
AGENT_MAX_ARTICLES_PER_RUN=5
# Default content topics (comma-separated)
AGENT_DEFAULT_TOPICS=news,lifestyle,technology,sports,health,finance

# ===========================================
# Application Settings
# ===========================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
